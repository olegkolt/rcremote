<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="home.oleg.rcremote">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="home.oleg.rcremote.ServerActivity"
            android:screenOrientation="landscape" />
        <activity android:name="home.oleg.rcremote.SelectModeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="home.oleg.rcremote.ClientActivity"
            android:screenOrientation="portrait" />

        <service
            android:name="home.oleg.rcremote.client.SensorService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>